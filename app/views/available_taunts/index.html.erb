<p id="notice"><%= notice %></p>

<h1>Available Taunts</h1>

<table>
  <thead>
    <tr>
      <th>Tauntable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @available_taunts.each do |available_taunt| %>
      <tr>
        <td><%= available_taunt.tauntable %></td>
        <td><%= link_to 'Show', available_taunt %></td>
        <td><%= link_to 'Edit', edit_available_taunt_path(available_taunt) %></td>
        <td><%= link_to 'Destroy', available_taunt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

